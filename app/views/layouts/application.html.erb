<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <script type="text/javascript" src="https://code.jquery.com/jquery-3.1.1.js"></script>
    <script src="../../../bootstrap-3.3.7-dist/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="../../assignment5/Blog_post_show.css">
    <link href="../../../font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=IM+Fell+DW+Pica|Lora|Merriweather" rel="stylesheet">
  </head>

  <body>
    <nav class="navbar navbar-default navbar-fixed-top navbar-inverse" id="nav">
  <div class="container">
    <div class="navbar-header">
        <a class="navbar-brand" href="#">
          <img alt="Brand" src="../../assets/images/blog_logo.png">
        </a>
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>
    <div class="collapse navbar-collapse navbar-responsive-collapse" id="myNavbar">

      <ul class="nav navbar-nav">
        <li class="nav-item">
          <%= link_to "Home", root_path %>
        </li>
        <li class="nav-item">
          <%= link_to "Posts", posts_path %>
        </li>
        <li class="nav-item">
          <%= link_to "New Post", new_post_path %>
        </li>
        <li class="nav-item">
          <a href="#">About</a>
        </li>
        <li class="nav-item">
          <a href="#">Contact</a>
        </li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
      <% if user_signed_in? %>
        <li class="nav-item">
          <a href="#">HELLO, <%= current_user.first_name.upcase %></a>
        </li>
        <li class="nav-item">
          <%= link_to "Sign Out", sessions_path, method: :delete %>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Sign Up", new_user_path %>
        </li>
        <li class="nav-item">
          <%= link_to "Sign In", new_session_path %>
        </li>
      <% end %>
      </ul>
      <form class="navbar-form navbar-right">
        <div class="form-group">
          <span class="glyphicon glyphicon-search"></span>
          <input type="text" class="form-control" placeholder="Search">
        </div>
      </form>
    </div>

  </div>
</nav>
    <%= link_to "Welcome", root_path %>
    |
    <%= link_to "Posts", posts_path %>
    |
    <%= link_to "New Post", new_post_path %>
    |
    <% if user_signed_in? %>
      Hello, <%= current_user.first_name %>
      |
      <%= link_to "Sign Out", sessions_path, method: :delete %>
    <% else %>
      <%= link_to "Sign Up", new_user_path %>
      |
      <%= link_to "Sign In", new_session_path %>
    <% end %>
    <% if flash[:notice] %>
      <div class="flash-notice"><%= flash[:notice] %></div>
    <% elsif flash[:alert] %>
      <div class="flash-alert"><%= flash.now[:alert] %></div>
    <% end %>
    <%= yield %>
  </body>
</html>

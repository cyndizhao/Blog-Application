<div class="row" id="changePassword">
    <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3>Change Password</h3>
        </div>
        <div class="panel-body">
          <%= form_tag change_password_path, method: :put do %>
            <hr>
              <div class="form-group">
                <%= password_field_tag :current_password, nil, class:'form-control input-md', placeholder: "Current_password" %>
              </div>
              <div class="form-group">
                <%= password_field_tag :new_password, nil, class:'form-control input-md', placeholder: "New_password" %>
              </div>
              <div class="form-group">
                <%= password_field_tag :new_password_confirmation, nil, class:'form-control input-md', placeholder: "New_password_confirmation" %>
              </div>
            <hr>
            <div class="row">
              <div class="col-xs-12 col-md-6">
                <%= submit_tag "Update Password", class: "btn btn-primary btn-block btn-md input-md" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>

    </div>
  </div>
  <style>
    footer{
            position:fixed;
            right:0px;
            left:0px;
            bottom: 5vh;
          }
  </style>

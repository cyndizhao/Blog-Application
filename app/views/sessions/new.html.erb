
<!-- <div class="container" id="signin"> -->
  <div class="row" style="margin-top:20px" id="signin">
    <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-12">
      <%= form_tag sessions_path do %>
        <fieldset>
          <h2>Sign In</h2>
          <hr>
          <div class="form-group">
            <%= email_field_tag :email, '', placeholder: 'Email Address',class: 'form-control input-lg' %>
          </div>
          <div class="form-group">
            <%= password_field_tag :password, '', placeholder: 'Password', class: 'form-control input-lg' %>
          </div>
          <hr>
          <div class="row">
            <div class="col-xs-6 col-sm-6 col-md-6">
              <%= submit_tag 'Sign In', class: 'btn btn-lg btn-primary btn-block' %>
            </div>
          </div>
        </fieldset>
      <% end %>
    </div>
  </div>
<!-- </div> -->

</div>
